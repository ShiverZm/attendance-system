<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weizujie.attendance.mapper.AdminMapper">
    <select id="findByAdmin" parameterType="com.weizujie.attendance.entity.Admin"
            resultType="com.weizujie.attendance.entity.Admin">
        select * from s_admin where username = #{username} and password = #{password}
    </select>

    <update id="editPswdByAdmin" parameterType="com.weizujie.attendance.entity.Admin">
        update s_admin set password = #{password} where id = #{id}
    </update>

</mapper>